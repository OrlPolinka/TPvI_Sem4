@model IEnumerable<DAL_Celebrity_MSSQL.Celebrity>
@using ASPA008_1.Helpers

@{
    ViewData["Title"] = "Все знаменитости";
}

<section class="container py-5">
    <h1 class="text-uppercase text-center fw-bold mb-5" style="letter-spacing: 1px;">Каталог знаменитостей</h1>

    <div class="text-center mb-4">
        <a asp-action="NewHumanForm" class="btn btn-outline-dark px-4 py-2 rounded-pill shadow-sm">
            + Добавить знаменитость
        </a>
    </div>

    <div class="d-flex flex-wrap justify-content-center gap-4">
        @foreach (var celebrity in Model)
        {
            <div class="celebrity-tile p-3 shadow rounded-4 bg-light" style="width: 220px; text-align: center;">
                <div class="mb-2">
                    @Html.CelebrityFoto(celebrity, 200, 200)
                </div>
                <div class="fw-semibold mt-2" style="font-size: 1rem;">
                    @celebrity.FullName
                </div>
            </div>
        }
    </div>
</section>
